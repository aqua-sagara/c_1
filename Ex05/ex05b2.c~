#include <stdio.h>

main () {
  int n,m,b;
  
  printf("0でない自然数nを入力\n");
  scanf("%d", &n);
  
  while ( n!==1) {

    switch (n%2){
    case 0:
      m=n/2;
      printf("n=%d\n",m);
	break;
    case 1:
      b=n*3+1;
      printf("n+%d\n",b);
      break;
    }


   
 }

 printf("終了します\n");
  
}

