#include <stdio.h>
main()
{
  double a,b,c,d,e,ave;

  printf("５人分の体重を空白で分けて入力してください\n");
  scanf("%lf%lf%lf%lf%lf",&a,&b,&c,&d,&e);
  ave=(a+b+c+d+e)/5;

  printf("５人の体重の平均値：%.1fkg\n",ave);

  printf("1人目の体重：%.1fkg,平均からの偏差：%.1fkg\n",a,a-ave);
  printf("2人目の体重：%.1fkg,平均からの偏差：%.1fkg\n",b,b-ave);
  printf("3人目の体重：%.1fkg,平均からの偏差：%.1fkg\n",c,c-ave);
  printf("4人目の体重：%.1fkg,平均からの偏差：%.1fkg\n",d,d-ave);
  printf("5人目の体重：%.1fkg,平均からの偏差：%.1fkg\n",e,e-ave);
}
